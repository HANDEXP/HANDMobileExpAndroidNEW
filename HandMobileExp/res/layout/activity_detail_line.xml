<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.hand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_line_id"
    android:background="#fff"
    android:orientation="vertical" >
	<include 
	    layout="@layout/other_header"
	    
	    />
    
    <LinearLayout
        android:id="@+id/detail_line_1"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#CCCC99"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/camera"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:contentDescription="@string/EdisonChen"
            android:src="@drawable/camera" />

        <ui.custom.component.NumberText
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:background="#00000000"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#000"
             android:textStyle="bold"
            android:gravity="right|center_vertical"
            android:cursorVisible="false"
            android:hint="0"
            custom:precision="2"
           >
			
 
        </ui.custom.component.NumberText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:id="@+id/llquantity"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/amountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/amountLabel"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:background="#00000000"
                android:ems="10"
                android:cursorVisible="false"
                android:gravity="right|center_vertical"
                android:inputType="numberDecimal"
                custom:precision="2"
                android:text="0" >

      
            </TextView>

            <TextView
                android:id="@+id/quantityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/quantityLabel"
                android:textColor="#000"
                android:textStyle="bold" />

           <EditText
                android:id="@+id/quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="0.25"
                android:cursorVisible="false"
                android:background="#00000000"
                android:ems="10"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:hint="1" >

      
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#CCCCCC"
            android:padding="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:clickable="true"
        	android:focusable="true"
            android:id="@+id/expense_type"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/detailTypeLabel"
                android:textColor="#000"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/detailTypeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:text="@string/detailTypeLabel"
                android:textColor="#000"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#CCCCCC"
            android:padding="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/place"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/placeLabel"
                android:textColor="#000"
                android:textStyle="bold" />
            
             <TextView
                 android:id="@+id/placeLabel"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:gravity="right"
                 android:textColor="#000"
                 android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#CCCCCC"
            android:padding="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/llcalendar_id"           
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/dateLabel"
                android:textColor="#000"
                android:textStyle="bold" />
            
            <TextView 
                android:layout_width="0dp"
                android:id="@+id/tvcalendar_id"
                android:gravity="right|center"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="2014-09-27 > 2014-09-31"
                android:textColor="#000"     
               
                
                />
            
            
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#CCCCCC"
            android:padding="15dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/expense_desc_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.3"
        android:background="@drawable/corners_desc_bg"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="0.1"
        android:background="@drawable/corners_new_detail_bg"
        android:text="@string/savelabel"
        android:textColor="#fff"
        android:textSize="20sp" />

</LinearLayout>